<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Alarmset_activity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="편히주무세요! 깨워드릴께요"
            android:textSize="30sp"
            android:id="@+id/textView" tools:layout_editor_absoluteY="45dp" tools:layout_editor_absoluteX="0dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/linearLayout" tools:ignore="MissingConstraints">
        <TimePicker
                android:id="@+id/time_picker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintVertical_bias="0.564">
        <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/btn_start"
                android:text="시작" android:onClick="onClick_1"/>




    </LinearLayout>
    <Button
            android:text="home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Alarm_b1"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintVertical_bias="0.976"/>

</android.support.constraint.ConstraintLayout>