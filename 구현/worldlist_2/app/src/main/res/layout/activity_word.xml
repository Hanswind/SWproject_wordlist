<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

                                             xmlns:app="http://schemas.android.com/apk/res-auto"

                                             xmlns:tools="http://schemas.android.com/tools"

                                             android:layout_width="match_parent"

                                             android:layout_height="match_parent"

                                             tools:context=".word">



    <TextView

            android:id="@+id/textView2"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="47dp"

            android:layout_marginBottom="407dp"

            android:text="단어 등록"

            android:textSize="30dp"

            app:layout_constraintBottom_toTopOf="@id/word"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.0" />



    <TextView

            android:id="@+id/textView3"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginStart="51dp"

            android:text="뜻"

            android:textSize="25dp"

            app:layout_constraintBaseline_toBaselineOf="@+id/word"

            app:layout_constraintStart_toStartOf="parent" />



    <TextView

            android:id="@+id/textView4"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="의미"

            android:textSize="25dp"

            app:layout_constraintBaseline_toBaselineOf="@+id/sentence"

            app:layout_constraintEnd_toEndOf="@+id/textView3"

            app:layout_constraintStart_toEndOf="@+id/textView3" />



    <Button

            android:id="@+id/button"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginBottom="30dp"

            android:onClick="onClickAppend"

            android:text="등록하기"

            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.498"

            app:layout_constraintStart_toStartOf="parent" />



    <EditText

            android:id="@+id/word"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="150dp"

            android:ems="10"

            android:hint="뜻을 입력하세요"

            app:layout_constraintStart_toStartOf="@+id/sentence"

            app:layout_constraintTop_toTopOf="parent" />





    <EditText

            android:id="@+id/sentence"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginStart="19dp"

            android:layout_marginTop="20dp"

            android:ems="10"

            android:hint="의미를 입력하세요"

            app:layout_constraintStart_toEndOf="@+id/textView4"

            app:layout_constraintTop_toBottomOf="@+id/word" />



    <TextView

            android:id="@+id/textView5"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"

            android:layout_marginTop="32dp"

            android:onClick="onClickFindWord"

            android:text="사전에서 의미 불러오기"

            app:layout_constraintStart_toStartOf="@+id/sentence"

            app:layout_constraintTop_toBottomOf="@+id/sentence" />



    <TextView

            android:id="@+id/textView_word_list"

            android:layout_width="0dp"

            android:layout_height="50dp"

            android:layout_marginStart="8dp"

            android:layout_marginEnd="8dp"

            android:layout_marginBottom="8dp"

            android:text=""

            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="1.0"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/textView2"

            app:layout_constraintVertical_bias="0.878" />





</android.support.constraint.ConstraintLayout>